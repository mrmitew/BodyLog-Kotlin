<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="300dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Log measurement"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back size: "/>

            <EditText
                android:id="@+id/et_back_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="cm"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest size: "/>

            <EditText
                android:id="@+id/et_chest_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="cm"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms size: "/>

            <EditText
                android:id="@+id/et_arms_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="cm"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waist size: "/>

            <EditText
                android:id="@+id/et_waist_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="cm"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/white">

            <ProgressBar
                android:id="@+id/pb_state_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminate="true"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_log"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="sans-serif"
                android:text="Log it"
                android:textColor="@color/colorAccent"
                android:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>